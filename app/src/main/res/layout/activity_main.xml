<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mack Call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/but1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多个权限"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but"/>

    <Button
        android:id="@+id/btu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="封装String类型的Toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but1"/>

    <Button
        android:id="@+id/btu3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="封装Int类型的Toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btu2"/>

    <Button
        android:id="@+id/btu4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转MainActivity2"
        app:layout_constraintTop_toBottomOf="@id/btu3"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btu5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转MainActivity3"
        app:layout_constraintTop_toBottomOf="@id/btu4"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>